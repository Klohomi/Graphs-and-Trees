int getAncestor(int u, int dis){
    dis = lvl[u] - dis;                        // changed the distance to height of the node at dis distance
    int i, lg ;
    for(lg=0; (1<<lg) <= lvl[u]; lg++); 
    lg--;

    for(i=lg; i>=0; i--){
        if (lvl[u] - (1<<i) >= dis)
            u = P[u][i];
    }

    return u;
}

int dis(int u, int v){
    if (lvl[u] < lvl[v]) swap(u, v);
    int w = lca(u, v);
    return lvl[u] + lvl[v] - 2*lvl[w];
}
